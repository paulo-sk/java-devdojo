package javaYdanelLiang.cap2_elementaryProgr.exercicios;

import java.util.*;

public class SquareMetersToPing {

	static Scanner entrada = new Scanner(System.in);
	
	public static void main(String[] args) {
		// Metros quadrados para ping
		//1 metroquadrado = 0.3025 ping
		
		System.out.print("Quantos metros quadrados? ");
		double metrosQuadrados = entrada.nextDouble();
		
		double ping = metrosQuadrados * 0.3025;
		
		System.out.println(metrosQuadrados + "m2 = " + ping + " ping.");
	}

}
