package javaYdanelLiang.cap2_elementaryProgr.exemplos;

import java.util.*;
public class DisplayTime {

	static Scanner in = new Scanner(System.in);
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.print("Digite quantos segundos: ");
		int segundos = in.nextInt();
		
		int minutos = segundos / 60;
		int restoSegundos = segundos % 60;
		
		System.out.println(segundos +" = " + minutos + "minutos e " + restoSegundos + " segundos.");
		
	}

}
